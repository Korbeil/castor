{
    "name": "jolicode/castor",
    "description": "DX oriented task runner and command launcher built with PHP",
    "keywords": ["task", "runner", "async", "parallel", "process", "castor"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Joel Wurtz",
            "email": "jwurtz@jolicode.com"
        },
        {
            "name": "Gr√©goire Pineau",
            "email": "lyrixx@lyrixx.info"
        }
    ],
    "autoload": {
        "psr-4": {
            "Castor\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Castor\\Tests\\": "tests/"
        }
    },
    "require": {
        "jolicode/jolinotif": "^2.5",
        "monolog/monolog": "^3.3",
        "nikic/php-parser": "^4.15",
        "symfony/console": "^6.3",
        "symfony/filesystem": "^6.3",
        "symfony/finder": "^6.3",
        "symfony/monolog-bridge": "^6.3",
        "symfony/process": "^6.3",
        "symfony/string": "^6.3",
        "symfony/translation-contracts": "^3.2"
    },
    "bin": [
        "bin/castor"
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^6.3"
    }
}
