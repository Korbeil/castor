{
  "name": "jolicode/castor-phar",
  "description": "Tooling for building Castor PHAR",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Joel Wurtz",
      "email": "jwurtz@jolicode.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Castor\\Tools\\": "src/"
    }
  },
  "require": {
    "humbug/box": "^4.3.8",
    "humbug/php-scoper": "^0.18.3",
    "nikic/php-parser": "v4.15.5",
    "symfony/console": "^6.2",
    "symfony/finder": "^6.2"
  },
  "scripts": {
    "post-install-cmd": [
      "bin/stub-generator"
    ],
    "post-update-cmd": [
      "bin/stub-generator"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
