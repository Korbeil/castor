#!/usr/bin/env php
<?php

use Castor\Tools\Command\StubGeneratorCommand;

if (file_exists($file = __DIR__ . '/../vendor/autoload.php')) {
    require $file;
} elseif ($file = __DIR__ . '/../../../../vendor/autoload.php') {
    require $file;
} else {
    throw new \RuntimeException('Unable to find autoloader.');
}

(new StubGeneratorCommand('stub-generator'))
    ->run();
